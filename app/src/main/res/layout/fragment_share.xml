<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mhd.donor.Share">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-condensed"
        android:text="@string/sharetext"
        android:textAlignment="center"
        android:textSize="12pt"
        android:layout_above="@+id/imageViewwhatsapp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="78dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sharewithtext"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:textSize="14pt"
        android:textStyle="bold"
        android:textColor="@color/md_black_1000"

        android:layout_marginTop="251dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageViewwhatsapp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/whatsapp1"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/help"
        android:layout_alignTop="@+id/imageViewwhatsapp"
        android:layout_toLeftOf="@+id/textView17"
        android:layout_toStartOf="@+id/textView17" />

    <ImageView
        android:id="@+id/imageViewtwitter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/twitter1"
        android:layout_alignTop="@+id/imageViewwhatsapp"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17" />

</RelativeLayout>
