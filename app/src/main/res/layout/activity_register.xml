<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.aConstraintLayoutndroid.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mhd.donor.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:fontFamily="serif"
        android:hint="@string/signup"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="textEmailAddress"
        android:hint="@string/enterEmail"
        android:textColor="@color/common_google_signin_btn_text_dark_disabled"
        android:drawableLeft="@mipmap/closeeenvelope"
        android:drawablePadding="10dp"
        />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_below="@+id/editText3"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        android:drawableLeft="@mipmap/padlock"
        android:drawablePadding="10dp"
        android:textColor="@color/common_google_signin_btn_text_dark_disabled" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/bloodtype"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold"
        android:textSize="9pt"
        android:textAlignment="center"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_above="@+id/ABminus"
        android:layout_toLeftOf="@+id/Aplus"
        android:layout_toStartOf="@+id/Aplus"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:background="@drawable/button_shap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"/>

    <ImageView
        android:id="@+id/ABminus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        app2:srcCompat="@mipmap/abb"
        android:layout_above="@+id/Oplus"
        android:layout_alignLeft="@+id/Oplus"
        android:layout_alignStart="@+id/Oplus" />

    <ImageView
        android:id="@+id/Aminus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app2:srcCompat="@mipmap/aa"
        android:layout_below="@+id/textView15"
        android:layout_toRightOf="@+id/ABplus"
        android:layout_toEndOf="@+id/ABplus" />

    <ImageView
        android:id="@+id/Bplus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app2:srcCompat="@mipmap/b"
        android:layout_below="@+id/Aminus"
        android:layout_alignLeft="@+id/Aplus"
        android:layout_alignStart="@+id/Aplus" />

    <ImageView
        android:id="@+id/Bminus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/Aminus"
        android:layout_toEndOf="@+id/Ominus"
        android:layout_toRightOf="@+id/Ominus"
        android:background="@android:color/transparent"
        app2:srcCompat="@mipmap/bb" />

    <ImageView
        android:id="@+id/Oplus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app2:srcCompat="@mipmap/o"
        android:layout_above="@+id/next"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />

    <ImageView
        android:id="@+id/Ominus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app2:srcCompat="@mipmap/oo"
        android:layout_below="@+id/ABminus"
        android:layout_toRightOf="@+id/Oplus"
        android:layout_toEndOf="@+id/Oplus" />

    <ImageView
        android:id="@+id/ABplus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app2:srcCompat="@mipmap/ab"
        android:layout_below="@+id/textView15"
        android:layout_toRightOf="@+id/Oplus"
        android:layout_toEndOf="@+id/Oplus" />

    <ImageView
        android:id="@+id/Aplus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app2:srcCompat="@mipmap/a"
        android:layout_above="@+id/Bplus"
        android:layout_toRightOf="@+id/Aminus"
        android:layout_toEndOf="@+id/Aminus" />

</RelativeLayout>
