<RelativeLayout tools:context="com.example.mhd.donor.Settings" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:fontFamily="serif"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/md_black_1000"
        android:textSize="25pt"
        android:text="@string/settingtext"

        android:id="@+id/textView5"/>
    <TextView
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="13pt"
        android:text="@string/notifcation"
        android:textColor="@color/md_black_1000"
        android:id="@+id/notifcationSettings"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/tur"
        android:layout_above="@+id/textView6"
        android:layout_toLeftOf="@+id/notifcationSettings"
        android:layout_toStartOf="@+id/notifcationSettings"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />
    <ToggleButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="ToggleButton"
        android:id="@+id/toggleButton"
        android:layout_alignBaseline="@+id/notifcationSettings"
        android:layout_alignBottom="@+id/notifcationSettings"
        android:layout_toRightOf="@+id/notifcationSettings"
        android:layout_toEndOf="@+id/notifcationSettings"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />
    <TextView
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="13pt"
        android:text="@string/languagetext"
        android:id="@+id/textView6"
        android:textColor="@color/md_black_1000"
        android:layout_alignTop="@+id/imageView13"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/md_white_1000"
        android:textSize="9pt"
        android:background="@drawable/button_shap"
        android:text="English"
        android:id="@+id/button2"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"/>
    <Button
        android:textStyle="bold"
        android:textColor="@color/md_white_1000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="22dp"
        android:textSize="9pt"
        android:text="العربية"
        android:id="@+id/button4"
        android:background="@drawable/button_shap"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"/>

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/translator1111"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

</RelativeLayout>