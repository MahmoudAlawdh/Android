<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="com.example.mhd.donor.ProfileActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar1"
        app:srcCompat="@mipmap/ic_launcher_round"

        />

    <EditText
        android:id="@+id/textName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView12"
        android:drawableLeft="@mipmap/username1111"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:text="Mahmoud"
        android:enabled="false"
        />

    <EditText
        android:id="@+id/textCivil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textEmail"
        android:drawableLeft="@mipmap/idcard"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:text="29123638453"
        android:enabled="false"
        />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textName"
        android:drawableLeft="@mipmap/closeenvelope"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:text="Mahomud@example.com"
        android:enabled="false"
        />

    <EditText
        android:id="@+id/textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textCivil"
        android:drawableLeft="@mipmap/password11"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:text="**************"
        android:enabled="false"
        />

    <EditText
        android:id="@+id/textNationalty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/passport"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:text="Kuwaiti"
        android:enabled="false"
        android:layout_below="@+id/textBirthDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/textBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textPassword"
        android:drawableLeft="@mipmap/calendarwithdate"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:text="5/7/1991"
        android:enabled="false"
        />


    <EditText
        android:id="@+id/textPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/phonereceiver"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:text="1888666"
        android:enabled="false"
        android:layout_below="@+id/textBirthDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />


    <EditText
        android:id="@+id/textBlood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@mipmap/blood111111"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:text="A+"
        android:enabled="false"
        />

    <Button
        android:id="@+id/editbutton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff0000"
        android:text="Edit Profile"
        android:textColor="@color/md_white_1000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textBlood"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnDisplay"
            android:layout_alignBottom="@+id/btnDisplay"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/radioMale"
            android:layout_toRightOf="@+id/radioMale"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/radio_female"
            android:drawableLeft="@mipmap/businesswoman"
            android:drawablePadding="10dp"
            />

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioFemale"
            android:layout_alignBottom="@+id/radioFemale"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_weight="1"
            android:checked="true"
            android:drawableLeft="@mipmap/businessman"
            android:drawablePadding="10dp"
            android:enabled="false"
            android:text="@string/radio_male" />
    </RadioGroup>

</RelativeLayout>

