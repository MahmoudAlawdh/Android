<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mhd.donor.MakeDonations">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/text_donation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Instructions For Donation?"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinnerSelectDonationType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/text_donation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="26dp"/>

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/c"
        android:ems="10"
        android:hint="Select Date"
        android:inputType="date"
        android:drawablePadding="10dp"
        android:layout_below="@+id/spinnerSelectDonationType"
        android:layout_alignLeft="@+id/spinnerSelectDonationType"
        android:layout_alignStart="@+id/spinnerSelectDonationType"
        android:layout_marginTop="48dp"
        android:layout_alignRight="@+id/spinnerSelectDonationType"
        android:layout_alignEnd="@+id/spinnerSelectDonationType" />

    <Spinner
        android:id="@+id/spinnerBranches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:layout_above="@+id/editTextTime"
        android:layout_alignLeft="@+id/editTextTime"
        android:layout_alignStart="@+id/editTextTime"
        android:layout_alignRight="@+id/editTextTime"
        android:layout_alignEnd="@+id/editTextTime" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/clock"
        android:ems="10"
        android:hint="Select Time"
        android:inputType="time"
        android:layout_marginBottom="27dp"
        android:drawablePadding="10dp"
        android:layout_above="@+id/confirmButton"
        android:layout_alignLeft="@+id/editTextDate"
        android:layout_alignStart="@+id/editTextDate"
        android:layout_alignRight="@+id/editTextDate"
        android:layout_alignEnd="@+id/editTextDate" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="Confirm"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
